#!/bin/sh
pip install --user --no-cache -r ./requirements.txt

echo -------------------------------------------------------------
echo Running $0.  This hangs the container and so you can shell in
echo \# docker-compose up www \&\& docker-compose exec /bin/bash
echo \# python start.py

# THIS KEEPS THE CONTAINER RUNNING
# AND GRACEFULLY KILLS IT TOO
trap 'pkill pip && kill -TERM $PID' TERM INT
tail -f /dev/null & 
PID=$!
wait $PID
trap - TERM INT
wait $PID
EXIT_STATUS=$?